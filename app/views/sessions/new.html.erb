<h1>Log In</h1>

<%= form_for(@user, :as => :session, :url => :sessions, :validate => true) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email%>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :validate => { :presence => true, :confirmation => false } %>
  </div>
  <div class="actions"><%= f.submit "Log In" %></div>
<% end %>